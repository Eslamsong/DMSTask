@model IEnumerable<Appointment>

<a asp-action="index" asp-route-id="@ViewBag.id" class="btn btn-primary"><i class="bi bi-calendar3"></i> Today's Appointments </a>

<form method="post" asp-route-id="@ViewBag.id" class="text-end form-control mb-3 list-group-item-secondary">
    <label for="startDate" class="form-label">From :</label>
    <input type="date" name="startDate" id="startDate" class="form-check-inline">
    <label for="endDate" class="form-label">To :</label>
    <input type="date" name="endDate" id="endDate" class="form-check-inline">
    <button type="submit" class="btn btn-primary"><i class="bi bi-funnel-fill"></i> Filter</button>
</form>


<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Patient Birth Date</th>
            <th>Appointment</th>
            <th>Doctor Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.PatientBirthDate.ToShortDateString()</td>
                <td>@item.AppointmentDateTime</td>
                <td>@item.Doctor.DoctorName</td>
            </tr>
        }
    </tbody>
</table>
