@model IEnumerable<Appointment>

<a asp-action="create" class="btn btn-primary"><i class="bi bi-file-earmark-plus-fill"></i> Create New Appointment</a>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Patient Birth Date</th>
            <th>Appointment</th>
            <th>Doctor Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.PatientBirthDate.ToShortDateString()</td>
                <td>@item.AppointmentDateTime</td>
                <td>@item.Doctor.DoctorName</td>
            </tr>
        }
    </tbody>
</table>